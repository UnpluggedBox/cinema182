						<!-- end header menu btn -->
					</div>
				</div>
			</div>
		</div>
	</div>

</header>
<!-- end header -->

	<!-- details -->
	<section class="section details">
		<!-- details background -->
		<div class="details__bg" data-bg="/films/JOHN3.jpg"></div>
		<!-- end details background -->


		<!-- details content -->
		<div class="container">
			<div class="row">
				<!-- title -->
				<div class="col-12">
					<h1 class="details__title" id="filmTitle"></h1>
				</div>
				<!-- end title -->

				<!-- content -->
				<div class="col-12 col-xl-6">
					<div class="card card--details">
						<div class="row">
							<!-- card cover -->
							<div class="col-12 col-sm-4 col-md-4 col-lg-4 col-xl-5">
								<div class="card__cover">
									<img class ="filmImage" src = "$film.getFilmimageloc()" width="320" height="320">
								</div>
							</div>
							<!-- end card cover -->

							<!-- card content -->
							<div class="col-12 col-sm-8 col-md-8 col-lg-9 col-xl-7">
								<div class="card__content">

									<ul class="card__meta">
										<li id="releasedateformat"><span></span>$film.getReleasedate()</li>
										<li><span>Running time:</span> $film.getDuration() minutes</li>
										<li></li>
									</ul>

									<div class="card__description card__description--details">
											$film.getDescription()
									</div>

									<div class="w3-container">
											<a href="$WebPath.getHOME_PAGE()film_details_admin/$film.getFilmid()/edit/">
											<button class="form__btn" type="submit" style="float: left; height: 35px; width: 55px" value="$film.getFilm()">Edit</button>
											</a>

										<button onclick="document.getElementById('deleteModal$film.getFilmid()').style.display='block'" class="form__btn" type="submit" style="margin-left: 5px; float: left; height: 35px; width: 75px">Delete</button>
													<div class="w3-modal" id="deleteModal$film.getFilmid()" tabindex="-1" role="dialog">
														<div class="w3-modal-content w3-animate-zoom w3-card-4">
															<header class="w3-container w3-pink">
        														<span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
																<h2>Delete Film?</h2>
															</header>
															<div class="w3-container">
																<span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
																<p></p>
																<p>Are you sure you want to delete $film.getTitle()?</p>
															</div>
															<footer class="w3-container w3-pink">
																<button style="float: left" type="button" class="w3-btn w3-display-bottomleft" data-dismiss="modal" onclick="document.getElementById('deleteModal$film.getFilmid()').style.display='none'">
																	<i data-feather="x"></i> Cancel
																</button>
																<form method="post"
																	  action="$WebPath.getHOME_PAGE()film_details_admin/$film.getFilmid()/delete/">
																	<button type="submit" class="w3-btn" style="margin-left: 70px" value="$film.getFilmid()" name="filmid">
																		Delete
																	</button>
																</form>
															</footer>
														</div>
													</div>

									</div>
								</div>
							</div>
							<!-- end card content -->
						</div>
					</div>
				</div>
				<!-- end content -->

				<!-- trailer -->
				<div class="col-12 col-xl-6">
					<iframe style="border:none; float: right; width:560px; height:400px"
							src="$film.getTrailerurl()">
					</iframe>
				</div>
				<!-- trailer -->

					</div>
				</div>
			</div>
		</div>
		<!-- end details content -->
	</section>
	<!-- end details -->

	<!-- content -->
	<section class="content">
		<div class="content__head">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h2 class="content__title">Other Movies in our Cinema</h2>
					</div>
					#foreach($film in $filmList)
						<div>
							<a href="$WebPath.getHOME_PAGE()film_details_admin/$film.getFilmid()/view/">
								<button style="padding-left: 20px; padding-bottom: 10px; margin: 5px" type ="submit" name="buttonFilm" value="$film.getFilm()">
									<img class ="filmImage"src = "$film.getFilmimageloc()" width="240" height="320">
								</button>
							</a>
						</div>

					#end
				</div>
			</div>
		</div>

	<!-- end content -->

